#pass function as a prameter

def sum (a,b):
    return a*b
def mul(x):
    return x**2

print(sum(mul(2),5))

#local and global
x = 1
def add_one (x):
    x = x + 1
    # add one to the local x
    return x


# call the function
y = add_one (x)
print(x)   #1
print(y)   #2


def f1():
    global x
    x = x + 1
    return x   #2

def f2():
    return x   #2

def f3():
    x = 5
    return x+1    #6


# x = 0
print(f1()) #global
print(f2()) #global
print(f3()) #local


