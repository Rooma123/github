# multiple inheretance
class Person :
    def __init__(self,name , age):
        self.name=name
        self.age=age

    def display(self):
        return f"my name is {self.name } and my age is {self.age}"


class Salary:
    def __init__(self,salary):
        self.salary=salary


class Employee(Person,Salary):
    def __init__(self,name,age,salary,skills):
        super().__init__(name,age)
        super().__init__(salary)
        self.skills=skills



#multilevel inheretance

class GrandParent:
    def __init__(self,name):
        self.name=name

class Parent(GrandParent):
    def __init__(self,name,age):
        super().__init__(name)
        self.age=age

class Child(Person):
    def __init__(self,name,age,school):
        super().__init__(name,age)
        self.school=school

